/* components/prolist/prolist.wxss */
.prolist .proitem {
    width: 100%;
    height: 100px;
    border-bottom: 1rpx solid #cccccc;
    display: flex;
}

.prolist .proitem .itemimg {
    width: 100px;
    height: 100px;
}

.image {
    width: 90px;
    height: 90px;
    border: 1rpx solid #cccccc;
    margin: 5px;
    box-sizing: border-box;
}

.prolist .iteminfo {
    padding: 3px 5px;
    flex: 1;
}